{
    "name": "trading",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "start": "nx serve",
        "build": "NODE_ENV=production nx build",
        "build:watch": "NODE_ENV=production nx serve --watch --prod",
        "format": "nx format:write --all",
        "lint": "nx run-many --all --target=lint --fix --verbose",
        "dev": "nx e2e --coverage=false apps-trading-app-e2e --watch",
        "dev:prepare": "yarn lint && yarn format",
        "jest": "nx run-many --all --target=test",
        "jest:coverage": "nx run-many --all --target=test --codeCoverage=true",
        "test": "yarn jest && yarn cypress:run",
        "cypress:run": "NODE_ENV=e2e nx e2e --coverage=false apps-trading-app-e2e",
        "cypress:run:coverage": "NODE_ENV=e2e nx e2e --coverage=true apps-trading-app-e2e",
        "coverage:collect": "yarn jest:coverage && yarn cypress:run:coverage",
        "coverage:clean": "rm -rf coverage/*",
        "coverage:merge": "yarn istanbul-merge --out ./coverage/total.json ./coverage/**/*-final.json",
        "coverage:report": "yarn nyc report --reporter html --reporter text -t coverage --report-dir coverage",
        "coverage:generate": "yarn coverage:clean && yarn coverage:collect && yarn coverage:merge && yarn coverage:report"
    },
    "private": true,
    "dependencies": {
        "@reduxjs/toolkit": "^1.7.2",
        "classnames": "^2.3.1",
        "core-js": "^3.6.5",
        "loglevel": "^1.8.0",
        "material-design-icons": "^3.0.1",
        "raf": "^3.4.1",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-page-visibility": "^6.4.0",
        "react-redux": "^7.2.6",
        "regenerator-runtime": "0.13.7",
        "stats.js": "^0.17.0",
        "tslib": "^2.0.0",
        "use-resize-observer": "^8.0.0"
    },
    "devDependencies": {
        "@cypress/code-coverage": "^3.9.12",
        "@nrwl/cli": "13.8.0",
        "@nrwl/cypress": "13.8.0",
        "@nrwl/eslint-plugin-nx": "13.8.0",
        "@nrwl/jest": "13.8.0",
        "@nrwl/linter": "13.8.0",
        "@nrwl/react": "13.8.0",
        "@nrwl/tao": "13.8.0",
        "@nrwl/web": "13.8.0",
        "@nrwl/workspace": "13.8.0",
        "@testing-library/react": "12.1.2",
        "@testing-library/react-hooks": "7.0.2",
        "@types/jest": "^27.4.0",
        "@types/node": "16.11.7",
        "@types/react": "17.0.30",
        "@types/react-dom": "17.0.9",
        "@types/react-page-visibility": "^6.4.1",
        "@typescript-eslint/eslint-plugin": "~5.10.0",
        "@typescript-eslint/parser": "~5.10.0",
        "babel-jest": "27.2.3",
        "babel-plugin-istanbul": "^6.1.1",
        "chai-subset": "^1.6.0",
        "cypress": "^9.1.0",
        "eslint": "~8.7.0",
        "eslint-config-prettier": "8.1.0",
        "eslint-plugin-cypress": "^2.10.3",
        "eslint-plugin-import": "2.25.2",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-react": "7.27.0",
        "eslint-plugin-react-hooks": "4.3.0",
        "istanbul-merge": "^1.1.1",
        "jest": "27.2.3",
        "mock-websocket": "^0.0.7",
        "prettier": "^2.5.1",
        "react-test-renderer": "17.0.2",
        "ts-jest": "27.0.5",
        "typescript": "~4.5.2"
    }
}
